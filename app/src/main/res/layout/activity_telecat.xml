<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="#FFE8E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/telecat_title_bg"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Listo? Diviértete!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/telecat_timer_bg"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo restante"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:textSize="14sp"
            android:layout_marginRight="8dp"/>

        <!-- Ícono de reloj -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏰"
            android:textSize="16sp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:background="@drawable/telecat_countdown_bg"
            android:padding="6dp"
            android:minWidth="50dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Información de cantidad -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/telecat_info_bg"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad = 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#424242"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telecat!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#E91E63"
        android:layout_marginBottom="16dp"/>


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/telecat_image_frame"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgCat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/telecat_image_bg"
            android:src="@drawable/ic_cat_placeholder"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Siguiente"
        android:background="@drawable/telecat_button_siguiente"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:enabled="false"
        android:elevation="4dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>