<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/telecat_input_bg" />
            <stroke
                android:width="1dp"
                android:color="@color/telecat_input_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Flecha desplegable -->
    <item android:gravity="end|center_vertical"
        android:right="12dp">
        <shape android:shape="rectangle">
            <size android:width="12dp" android:height="8dp" />
            <!-- Aquí se podría poner un drawable de flecha, pero usamos el default del sistema -->
        </shape>
    </item>

</layer-list>